<% include partials/header.ejs %>
<div class="row">
    <div class="col-md-6">
        <div id="list-msg"></div>
        <form name="update" id="update_form">
            <div class="form-group row">
                <label for="name_update" id="name_update_label" class="col-sm-2 col-form-label">Name</label>
                <div class="col-sm-7">
                    <input type="text" class="form-control" name="name" id="name_update" placeholder="name" minlength="3"
                        maxlength="30">
                </div>
            </div>
            <div class="form-group row">
                <label for="mobile_update" id="mobile_update_label" class="col-sm-2 col-form-label">Mobile</label>
                <div class="col-sm-7">
                    <input type="number" class="form-control" name="mobile" id="mobile_update" placeholder="mobile"
                        minlength="10">
                </div>
            </div>
            <div class="wrapper text-center">
                <div class="btn-group btn-group-lg">
                    <button type="button" id="update-btn" class="btn wobble-vertical">Update</button>
                </div>
            </div>
        </form>
    </div>
</div>

<%- include("partials/footer.ejs" ,{script:"/js/profile.js"}) %>