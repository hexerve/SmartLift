<% include partials/header.ejs %>
<div class="row">
    <div class="col-md-6">
        <div id="members"></div>
    </div>

    <div class="col-md-6">
        <form name="addMember" id="create_member">
            <div class="form-group row">
                <label for="email_member" id="email_member_label" class="col-sm-2 col-form-label">Email</label>
                <div class="col-sm-7">
                    <input type="email" class="form-control" name="email" id="email_member" placeholder="Email">
                </div>
            </div>
            <div class="form-group row">
                <label for="name_member" id="name_member_label" class="col-sm-2 col-form-label">Name</label>
                <div class="col-sm-7">
                    <input type="text" class="form-control" name="name" id="name_member" placeholder="name" minlength="3"
                        maxlength="30">
                </div>
            </div>
            <div class="form-group row">
                <label for="mobile_member" id="mobile_member_label" class="col-sm-2 col-form-label">Mobile</label>
                <div class="col-sm-7">
                    <input type="number" class="form-control" name="mobile" id="mobile_member" placeholder="mobile"
                        minlength="10">
                </div>
            </div>
            <div class="wrapper text-center">
                <div class="btn-group btn-group-lg">
                    <button type="button" id="add-btn" class="btn wobble-vertical">Add user</button>
                </div>
            </div>
        </form>

    </div>
</div>

<%- include("partials/footer.ejs" ,{script:"/js/member.js"}) %>